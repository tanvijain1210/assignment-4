CREATE TABLE payments (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100),
  amount DECIMAL(10,2),
  type VARCHAR(20),
  created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE attendance (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100),
  date DATE,
  status VARCHAR(20)
);

CREATE TABLE inventory (
  id INT AUTO_INCREMENT PRIMARY KEY,
  item_name VARCHAR(100),
  quantity INT
);
